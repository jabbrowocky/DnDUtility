<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DnD Helper</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="Side-Bar-Nav">
        
            <a href="#"><i class="dnd-brand"></i></a>
            <a href="~/Home/_diceRoll"><i class="dnd-d20"></i></a>
            <a href="~/Home/Index"><i class="dnd-scroll"></i></a>
            <a href="#"><i class="fa fa-search"></i></a>
            <a href="#"><i class="fa fa-globe"></i></a>
      
        <div id="log-in-area">
            @Html.Partial("_LoginPartial")
        </div>     
    </div>
    <div class="container-fluid body-content">        
        <div class="container">           
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DnD Campaign Assistant by Erik White</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
